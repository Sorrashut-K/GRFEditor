<UserControl x:Class="GRFEditor.WPF.QuickColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
             xmlns:listView="clr-namespace:TokeiLibrary.WPF.Styles.ListView;assembly=TokeiLibrary"
             mc:Ignorable="d" d:Width="100" d:Height="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Border Name="_border" CornerRadius="2" Margin="0" BorderBrush="Black" BorderThickness="1" Background="White">
            <Grid Margin="1" Name="_grid" RenderOptions.BitmapScalingMode="NearestNeighbor">
                <Rectangle MouseLeftButtonUp="_previewPanelBg_MouseLeftButtonUp" Name="_previewPanelBg" Fill="{Binding ElementName=_scrollViewer, Path=Background}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <Grid.Background>
                    <VisualBrush TileMode="Tile" Viewport="0,0,16,16" ViewportUnits="Absolute">
                        <VisualBrush.Visual>
                            <Grid>
								<Image Source="../Resources/background.png" RenderOptions.BitmapScalingMode="HighQuality" Width="256" Height="256" />
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Grid.Background>
            </Grid>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" listView:WpfUtils.ImagePath="copy.png" Click="_meCopy_Click" />
                    <MenuItem Header="Paste" listView:WpfUtils.ImagePath="paste.png" Click="_mePaste_Click" />
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
        <Border IsHitTestVisible="False" Name="_borderEnabled" CornerRadius="2" Margin="0" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        <styles:FancyButton Visibility="Collapsed" Grid.Column="1" Name="_reset" Click="_reset_Click" Width="18" Height="18" ImagePath="reset.png" Margin="3 0 0 0" />
    </Grid>
</UserControl>
