<UserControl x:Class="GRFEditor.WPF.PreviewTabs.PreviewSprites"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ListView="clr-namespace:TokeiLibrary.WPF.Styles.ListView;assembly=TokeiLibrary"
             xmlns:sliders="clr-namespace:ColorPicker.Sliders;assembly=ColorPicker"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400" Background="{DynamicResource TabItemBackground}" Foreground="{DynamicResource TextForeground}">
    <Grid Name="_primaryGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <DockPanel>
                <Label Name="_labelHeader" FontWeight="Bold" Content="Folder preview" FontSize="16" Margin="3 10 0 5" />
                <Grid Margin="10 0 0 0" VerticalAlignment="Center" MinWidth="220">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <Label Padding="0" Margin="2" Content="Size" VerticalAlignment="Center" />
                        <sliders:SliderColor Width="100" Height="19.5" x:Name="_gpEase" Margin="2" />
                    </DockPanel>
                    <CheckBox Grid.Row="1" Name="_cbWrapImages" Content="Wrap images" Margin="1" HorizontalAlignment="Left" />
                    <CheckBox Grid.Row="1" Grid.Column="1" Name="_cbShowNames" Content="Show names" Margin="1" HorizontalAlignment="Left" />
                </Grid>
            </DockPanel>
            <Rectangle Margin="5 0 5 5" Stroke="{DynamicResource SeperatorBrush}" VerticalAlignment="Stretch" />
        </StackPanel>
        <ScrollViewer Name="_sv" Grid.Row="1">
            <Grid Name="_gridBackground">
                <WrapPanel Name="_wrapPanel" VerticalAlignment="Top">

                </WrapPanel>
                <StackPanel Name="_stackPanel" VerticalAlignment="Top">
                    
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
